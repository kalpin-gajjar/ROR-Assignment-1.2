<div class="m-5" >
  <p style="color: green"><%= notice %></p>

  <strong>Name:</strong>
  <%= @sector.name %><br>
  <hr>

  <strong>Industries:</strong><br><br>
  <% @sector.industries.each do |industry| %>
    <strong>Name:</strong>
    <%= industry.name %><br>
  <% end %>
  <hr>

  <div class="my-2">
    <%= link_to "Edit this sector", edit_sector_path(@sector) %> |
    <%= link_to "Back to sectors", sectors_path %>
    <hr>

    <%= button_to "Destroy this sector", @sector, method: :delete, class:"my-2" %>
  </div>
</div>