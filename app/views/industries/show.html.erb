<div class="m-5">
  <p style="color: green"><%= notice %></p>

  <strong>Name:</strong>
  <%= @industry.name %><br>


  <strong>Email:</strong>
  <%= @industry.email %><br>


  <strong>Registration number:</strong>
  <%= @industry.registration_number %><br>
  <hr>

  <strong>Sectors:</strong><br>
  <% @industry.sectors.each_with_index do |sector, index| %>
    <%= index == (@industry.sectors.length - 1) ? "#{sector.name}" : "#{sector.name}, " %>
  <% end %>  
  <hr>

  <div class="my-2">
    <%= link_to "Edit this industry", edit_industry_path(@industry) %> |
    <%= link_to "Back to industries", industries_path %>
    <hr>

    <%= button_to "Destroy this industry", @industry, method: :delete, class:"my-2" %>
  </div>
</div>